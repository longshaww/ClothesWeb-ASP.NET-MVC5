            @Html.EditorFor(model => model.nameProduct, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nameProduct, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.idCollection, "idCollection", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("idCollection", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.idCollection, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.idProduct, new { htmlAttributes = new { @class = "form-control", @type = "hidden", @Value=@Guid.NewGuid().ToString()} })
            </div>
        </div>

    <div class="form-group">
        @Html.LabelFor(model => model.sizeM, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.sizeM, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.sizeM, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.sizeL, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.sizeL, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.sizeL, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.sizeXL, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.sizeXL, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.sizeXL, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.price, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
            <label>Image upload</label>
        <div class="col-md-10">
            <input type="file" multiple name="ImageUpload" class="form-control" required/>
        </div>
    </div>

    <div class="text-center mt-3">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

